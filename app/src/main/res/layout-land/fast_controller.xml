<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/widget_back"
    android:elevation="4dp"
    android:orientation="vertical"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        tools:ignore="UseCompoundDrawables">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:contentDescription="@string/app_name"
            android:src="@drawable/photon_lab" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:text="@string/element_light_controller" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center_vertical"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <Button
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:background="@drawable/oval"
                android:backgroundTint="@color/colorWhite"
                android:gravity="center"
                android:text="@string/sub"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="8"
                android:gravity="center"
                android:text="@string/_100"
                android:textSize="24sp"
                android:textStyle="bold" />

            <Button
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:layout_gravity=""
                android:background="@drawable/oval"
                android:backgroundTint="@color/colorWhite"
                android:gravity="center"
                android:text="@string/add"
                android:textSize="18sp"
                android:textStyle="bold" />
        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="6dp"
            android:background="#eee" />

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:columnCount="5"
            android:rowCount="1">

            <LinearLayout
                android:layout_height="match_parent"
                android:layout_columnWeight="1"
                android:gravity="center">

                <Button
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:background="@drawable/oval_selected"
                    android:backgroundTint="@color/yellow"
                    android:elevation="2dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_height="match_parent"
                android:layout_columnWeight="1"
                android:gravity="center">

                <Button
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:background="@drawable/widget_oval"
                    android:backgroundTint="@color/blue"
                    android:elevation="2dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_height="match_parent"
                android:layout_columnWeight="1"
                android:gravity="center">

                <ImageButton
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/round_btn"
                    android:backgroundTint="@color/colorWhite"
                    android:contentDescription="@string/app_name"
                    android:elevation="2dp"
                    android:padding="10dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/power_button"
                    android:tint="@color/blue" />
            </LinearLayout>

            <LinearLayout
                android:layout_height="match_parent"
                android:layout_columnWeight="1"
                android:gravity="center">

                <Button
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:background="@drawable/widget_oval"
                    android:backgroundTint="@color/purple"
                    android:elevation="2dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_height="match_parent"
                android:layout_columnWeight="1"
                android:gravity="center">

                <Button
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:background="@drawable/widget_oval"
                    android:backgroundTint="@color/orange"
                    android:elevation="2dp" />
            </LinearLayout>
        </GridLayout>
    </LinearLayout>
</LinearLayout>