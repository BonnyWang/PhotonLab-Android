<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment_Control">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false">



        <FrameLayout
            android:id="@+id/seekBarCard"
            android:layout_width="191dp"
            android:layout_height="353dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.5"
            >
            <androidx.cardview.widget.CardView
                android:id="@+id/cv"
                android:layout_width="263dp"
                android:layout_height="131dp"
                android:rotation="-90"
                app:cardCornerRadius="33dp"
                app:cardPreventCornerOverlap="false"


                app:contentPadding="0dp"

                app:cardElevation="8dp"
                app:cardBackgroundColor="@android:color/transparent"
                android:layout_marginTop="120dp"
                android:layout_marginLeft="-36dp">
            <SeekBar
                android:id="@+id/seekBar5"
                android:layout_width="300dp"
                android:layout_height="131dp"

                android:progressDrawable="@drawable/seekbar_drawable_progress"
                android:background="@drawable/seekbar_drawable_background"
                android:thumb="@drawable/seekbar_drawable_thumb"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.5"
                android:layout_marginLeft="-16dp"/>



            </androidx.cardview.widget.CardView>

        </FrameLayout>






        <LinearLayout
            android:id="@+id/coloroptions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center|center_horizontal"
            android:orientation="horizontal"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/seekBarCard"
            >

            <RadioGroup
                android:id="@+id/radioGroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <RadioButton
                    android:id="@+id/rButton1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:button="@drawable/oval"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/checked"/>
                <RadioButton
                    android:id="@+id/rButton2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:button="@drawable/ovalblue"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/checked_blue"/>
                <RadioButton
                    android:id="@+id/rButton3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:button="@drawable/ovalorange"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/checked_orange"/>
                <RadioButton
                    android:id="@+id/rButton4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:button="@drawable/ovalpurple"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/checked_purple"/>
            </RadioGroup>

            <Button
                android:id="@+id/AddColor"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/add_color_24dp"
                />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/coloroptions0"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center|center_horizontal"
            android:orientation="horizontal"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.85"

            android:visibility="visible"
            >

            <RadioGroup
                android:id="@+id/radioGroup0"
                android:layout_width="240dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <!--<androidx.appcompat.widget.LinearLayoutCompat-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="wrap_content">-->
                    <RadioButton
                        android:id="@+id/rButton01"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:button="@drawable/oval"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="8dp"
                        android:background="@drawable/checked"/>
                    <RadioButton
                        android:id="@+id/rButton02"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:button="@drawable/ovalblue"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="8dp"
                        android:background="@drawable/checked_blue"/>
                    <RadioButton
                        android:id="@+id/rButton03"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:button="@drawable/ovalorange"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="8dp"
                        android:background="@drawable/checked_orange"/>
                    <RadioButton
                        android:id="@+id/rButton04"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:button="@drawable/ovalpurple"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="8dp"
                        android:background="@drawable/checked_purple"/>
                    <RadioButton
                        android:id="@+id/rButton05"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:button="@drawable/ovalpurple"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="8dp"
                        android:background="@drawable/checked_purple"/>
            </RadioGroup>
        </LinearLayout>

                <!--</androidx.appcompat.widget.LinearLayoutCompat>-->
    <RadioGroup
        android:id="@+id/radioGroup00"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/coloroptions0"
        android:layout_marginTop="15dp">
                    <RadioButton
                        android:id="@+id/rButton06"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:button="@drawable/oval"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="8dp"
                        android:background="@drawable/checked"/>
                    <RadioButton
                        android:id="@+id/rButton07"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:button="@drawable/ovalblue"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="8dp"
                        android:background="@drawable/checked_blue"/>
                    <RadioButton
                        android:id="@+id/rButton08"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:button="@drawable/ovalorange"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="8dp"
                        android:background="@drawable/checked_orange"/>
                    <RadioButton
                        android:id="@+id/rButton09"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:button="@drawable/ovalpurple"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="8dp"
                        android:background="@drawable/checked_purple"/>
                    <Button
                        android:id="@+id/AddColor00"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="8dp"
                        android:background="@drawable/add_color_24dp"
                        />


            </RadioGroup>




        <TextView
            android:id="@+id/bright_Value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Progress"
            android:textColor="#FFFFFF"
            android:textSize="30sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@id/seekBarCard"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/seekBarCard" />

        <TextView
            android:id="@+id/tvBrightness"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="@string/Brightness"
            android:textColor="#FFFFFF"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/bright_Value" />



        <ImageView
            android:id="@+id/sun"
            android:layout_width="wrap_content"
            android:layout_height="52dp"
            app:layout_constraintTop_toBottomOf="@id/All"
            app:layout_constraintBottom_toTopOf="@id/seekBarCard"
            android:layout_marginTop="15dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:srcCompat="@drawable/bright_sun" />


        <androidx.cardview.widget.CardView
            android:id="@+id/powerCard"
            android:layout_width="64dp"
            android:layout_height="64dp"

            app:cardCornerRadius="32dp"
            app:cardBackgroundColor="#cbbce7"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/coloroptions"
            app:layout_constraintBottom_toBottomOf="parent"
            app:cardElevation="0dp"
            app:layout_constraintVertical_bias="0.5">

            <ToggleButton
                android:id="@+id/Power"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:background="@drawable/power_button"
                android:textOn=""
                android:textOff=""/>
        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:id="@+id/All"
            android:layout_width="161dp"
            android:layout_height="95dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="10dp"
            app:contentPadding="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/Single"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0875">

            <ToggleButton
                android:id="@+id/AllButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textOff="@string/All"
                android:textOn="@string/All"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/DeepText"
                android:background="@android:color/transparent"
                android:textAllCaps="false"/>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/Single"
            android:layout_width="161dp"
            android:layout_height="95dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="10dp"
            app:contentPadding="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintLeft_toRightOf="@id/All"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0875">

            <ToggleButton
                android:id="@+id/SingleButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textOff="@string/Single"
                android:textOn="@string/Single"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/DeepText"
                android:background="@android:color/transparent"
                android:textAllCaps="false"/>
        </androidx.cardview.widget.CardView>

        <WebView
            android:id="@+id/webView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/noLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/No_Layout"
            android:textSize="45dp"
            android:textColor="@color/Light_Grey"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@+id/All"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.3"
            android:visibility="visible"/>

        <TextView
            android:id="@+id/tvGotoSetup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Go_to_setup"
            android:textStyle="bold"
            android:textColor="@color/Light_Grey"
            app:layout_constraintTop_toBottomOf="@+id/noLayout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:visibility="visible"/>

    </androidx.constraintlayout.widget.ConstraintLayout>


</FrameLayout>