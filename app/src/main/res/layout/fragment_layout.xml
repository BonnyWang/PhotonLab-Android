<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backGround"
    android:clickable="true"
    android:focusable="true"
    android:orientation="vertical"
    tools:context=".fragment_layout">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:background="@android:color/transparent"
        android:elevation="4dp"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/btBackLayout"
            android:layout_width="?actionBarSize"
            android:layout_height="?actionBarSize"
            android:background="@android:color/transparent"
            android:clickable="true"
            android:contentDescription="@string/app_name"
            android:focusable="true"
            android:foreground="?selectableItemBackground"
            android:padding="15dp"
            android:scaleType="fitXY"
            android:src="@drawable/back_button"
            android:tint="@color/colorPrimary"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/adapt_your_layout"
            android:textAlignment="center"
            android:textColor="#555555"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/button3"
            android:layout_width="?actionBarSize"
            android:layout_height="?actionBarSize"
            android:autoLink="web"
            android:background="@android:color/transparent"
            android:contentDescription="@string/app_name"
            android:foreground="?selectableItemBackground"
            android:padding="15dp"
            android:scaleType="fitXY"
            android:scaleX="1.1"
            android:scaleY="1.1"
            android:src="@drawable/ic_help"
            android:tint="@color/colorPrimary"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/done"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|end"
            android:background="@android:color/transparent"
            android:foreground="?android:attr/selectableItemBackground"
            android:text="@string/Done"
            android:textColor="@color/colorPrimary"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <FrameLayout
        android:id="@+id/main_stage"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/layoutContainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_constraintBottom_toTopOf="@id/step0_btns"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.4">

        </LinearLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/step0_btns"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/round_card"
            android:clickable="true"
            android:clipToPadding="false"
            android:elevation="4dp"
            android:focusable="true"
            android:paddingTop="11dp"
            android:paddingBottom="25dp">

            <ImageButton
                android:id="@+id/btAddHex"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginBottom="20dp"
                android:background="@android:color/transparent"
                android:contentDescription="@string/No_Device"
                android:src="@drawable/ic_layout_add"
                android:tint="#8D8D8D"
                app:layout_constraintBottom_toTopOf="@id/btNext"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.15"
                app:layout_constraintStart_toStartOf="parent" />

            <Button
                android:id="@+id/btNext"
                android:layout_width="match_parent"
                android:layout_height="@dimen/Set_Button_Height"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                android:layout_marginBottom="12dp"
                android:background="@drawable/set_background"
                android:backgroundTint="@color/colorPrimary"
                android:text="@string/Next"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@id/tv_node_num"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <ImageButton
                android:id="@+id/btDelete"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginBottom="20dp"
                android:background="@android:color/transparent"
                android:backgroundTint="#8D8D8D"
                android:contentDescription="@string/app_name"
                android:padding="14dp"
                android:scaleType="fitXY"
                android:src="@drawable/ic_layout_delete"
                app:layout_constraintBottom_toTopOf="@id/btNext"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.85"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/tv_node_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/setting_item_wifi"
                android:drawablePadding="6dp"
                android:drawableTint="#717171"
                android:gravity="center"
                android:text="@string/no_light_matched"
                android:textColor="#717171"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent" />

            <ImageButton
                android:id="@+id/btRotate"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginBottom="20dp"
                android:background="@android:color/transparent"
                android:contentDescription="@string/No_Device"
                android:padding="14dp"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_layout_rotate"
                android:tint="#8D8D8D"
                app:layout_constraintBottom_toTopOf="@id/btNext"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <LinearLayout
            android:id="@+id/nextLight_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center"
            android:gravity="top|center"
            android:orientation="horizontal"
            android:visibility="gone">

            <View
                android:layout_width="0dp"
                android:layout_height="100dp" />

            <ImageButton
                android:id="@+id/step1_next"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/round_btn"
                android:contentDescription="@string/Done"
                android:elevation="4dp"
                android:scaleType="fitXY"
                android:src="@drawable/arrow_righ"
                android:visibility="visible" />

            <ImageButton
                android:id="@+id/step1_resend"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="20dp"
                android:background="@drawable/round_btn_red"
                android:contentDescription="@string/Done"
                android:elevation="4dp"
                android:padding="4dp"
                android:scaleType="fitXY"
                android:src="@drawable/reset"
                android:tint="@color/colorWhite"
                android:visibility="visible" />
        </LinearLayout>

    </FrameLayout>
</LinearLayout>