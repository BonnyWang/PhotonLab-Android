<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:focusable="true"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent">

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <LinearLayout
            android:id="@+id/All"
            android:layout_width="0dp"
            android:layout_height="95dp"
            android:layout_weight="1.4"
            android:background="@android:color/transparent"
            app:layout_constraintVertical_bias="0.0875">

            <TextView
                android:id="@+id/tv_select_all"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:text="@string/All"
                android:textAlignment="center"
                android:textColor="@color/text_selected"
                android:textSize="22sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.2"
            android:gravity="center"
            android:orientation="vertical">

            <View
                android:id="@+id/divider"
                android:layout_width="2dp"
                android:layout_height="22dp"
                android:background="@color/text_normal" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/Single"
            android:layout_width="0dp"
            android:layout_height="95dp"
            android:layout_weight="1.4"
            android:background="@android:color/transparent"
            app:layout_constraintVertical_bias="0.0875">

            <TextView
                android:id="@+id/tv_select_single"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:text="@string/Single"
                android:textAlignment="center"
                android:textColor="@color/text_normal"
                android:textSize="22sp"
                android:textStyle="bold" />
        </LinearLayout>

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />
    </LinearLayout>

    <FrameLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/all_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <xyz.photonlab.photonlabandroid.views.DynamicLightSymbol
                android:id="@+id/sun"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginTop="20dp"
                android:contentDescription="@string/app_name"
                android:rotation="90"
                app:layout_constraintBottom_toTopOf="@id/seek_container"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/bright_sun" />

            <androidx.cardview.widget.CardView
                android:id="@+id/seek_container"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginTop="36dp"
                android:layout_marginBottom="36dp"
                app:cardBackgroundColor="#ffededed"
                app:cardCornerRadius="33dp"
                app:cardElevation="6dp"
                app:cardPreventCornerOverlap="false"
                app:contentPadding="0dp"
                app:layout_constraintBottom_toTopOf="@id/colors_1"
                app:layout_constraintDimensionRatio="w,9:20"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/sun"
                app:layout_constraintVertical_weight="3">

                <xyz.photonlab.photonlabandroid.views.WaveSeekBar
                    android:id="@+id/seekBar_brightness"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"
                    android:paddingStart="0dp"
                    android:paddingEnd="0dp"
                    android:visibility="gone" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="36dp"
                    android:gravity="center|bottom"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/progress_off_tip"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/off"
                        android:textColor="#8F8D90"
                        android:textSize="30sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/progress_tip"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/Progress"
                        android:textColor="#FFFFFF"
                        android:textSize="30sp"
                        android:textStyle="bold"
                        android:visibility="gone" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:id="@+id/colors_1"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:alpha="0.45"
                android:gravity="center"
                android:orientation="horizontal"
                app:layout_constraintBottom_toTopOf="@id/powerCard_c"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/seek_container"
                app:layout_constraintVertical_weight="1">

                <RadioGroup
                    android:id="@+id/radioGroup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/rButton1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="8dp"
                        android:background="@android:color/transparent"
                        android:button="@drawable/oval"
                        android:enabled="false" />

                    <RadioButton
                        android:id="@+id/rButton2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="8dp"
                        android:background="@android:color/transparent"
                        android:button="@drawable/oval"
                        android:enabled="false" />

                    <RadioButton
                        android:id="@+id/rButton3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="8dp"
                        android:background="@android:color/transparent"
                        android:button="@drawable/oval"
                        android:enabled="false" />

                    <RadioButton
                        android:id="@+id/rButton4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="8dp"
                        android:background="@android:color/transparent"
                        android:button="@drawable/oval"
                        android:enabled="false" />

                    <Button
                        android:id="@+id/AddColor"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_marginStart="12dp"
                        android:layout_marginEnd="12dp"
                        android:alpha="0.6"
                        android:background="@drawable/colorpicker"
                        android:enabled="false" />
                </RadioGroup>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/powerCard_c"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:gravity="center"
                app:layout_constraintBottom_toBottomOf="@id/connect_container"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/colors_1"
                app:layout_constraintVertical_weight="1">

                <androidx.cardview.widget.CardView
                    android:id="@+id/powerCard"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    app:cardBackgroundColor="@color/seekBar_Default"
                    app:cardCornerRadius="32dp"
                    app:cardElevation="4dp">

                    <ToggleButton
                        android:id="@+id/Power"
                        android:layout_width="46dp"
                        android:layout_height="46dp"
                        android:layout_gravity="center"
                        android:background="@drawable/power_button"
                        android:clickable="false"
                        android:focusable="false"
                        android:textOff=""
                        android:textOn="" />
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/connect_container"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:gravity="center"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@id/powerCard_c"
                app:layout_constraintVertical_weight="0.5">

                <ProgressBar
                    android:id="@+id/conn_progress"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginEnd="10dp"
                    android:indeterminateTint="@color/colorPrimary" />

                <ImageView
                    android:id="@+id/conn_iv"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginEnd="10dp"
                    android:contentDescription="@android:string/no"
                    android:src="@drawable/ic_done"
                    android:tint="@color/colorPrimary"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/conn_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nunito_extrabold"
                    android:text="@string/connecting_device"
                    android:textColor="#888888"
                    android:textSize="18sp" />
            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/single_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone">

            <LinearLayout
                android:id="@+id/content_container"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:gravity="center_vertical"
                android:orientation="vertical"
                app:layout_constraintBottom_toTopOf="@id/groups_container"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_weight="8">

                <TextView
                    android:id="@+id/noLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/No_Layout"
                    android:textColor="@color/Light_Grey"
                    android:textSize="45sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvGotoSetup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/Go_to_setup"
                    android:textColor="@color/Light_Grey"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/groups_container"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:alpha="0.45"
                android:gravity="center"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/content_container"
                app:layout_constraintVertical_weight="2.5">

                <RadioGroup
                    android:id="@+id/radioGroup0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/rButton01"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="8dp"
                        android:background="@android:color/transparent"
                        android:button="@drawable/oval"
                        android:enabled="false" />

                    <RadioButton
                        android:id="@+id/rButton02"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="8dp"
                        android:background="@android:color/transparent"
                        android:button="@drawable/oval"
                        android:enabled="false" />

                    <RadioButton
                        android:id="@+id/rButton03"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="8dp"
                        android:background="@android:color/transparent"
                        android:button="@drawable/oval"
                        android:enabled="false" />

                    <RadioButton
                        android:id="@+id/rButton04"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="8dp"
                        android:background="@android:color/transparent"
                        android:button="@drawable/oval"
                        android:enabled="false" />

                    <RadioButton
                        android:id="@+id/rButton05"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="8dp"
                        android:background="@android:color/transparent"
                        android:button="@drawable/oval"
                        android:enabled="false" />
                </RadioGroup>

                <RadioGroup
                    android:id="@+id/radioGroup00"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:enabled="false"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/rButton06"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="8dp"
                        android:background="@android:color/transparent"
                        android:button="@drawable/oval"
                        android:enabled="false" />

                    <RadioButton
                        android:id="@+id/rButton07"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="8dp"
                        android:background="@android:color/transparent"
                        android:button="@drawable/oval"
                        android:enabled="false" />

                    <RadioButton
                        android:id="@+id/rButton08"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="8dp"
                        android:background="@android:color/transparent"
                        android:button="@drawable/oval"
                        android:enabled="false" />

                    <RadioButton
                        android:id="@+id/rButton09"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="8dp"
                        android:background="@android:color/transparent"
                        android:button="@drawable/oval"
                        android:enabled="false" />

                    <Button
                        android:id="@+id/AddColor00"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_marginStart="12dp"
                        android:layout_marginEnd="12dp"
                        android:alpha="0.6"
                        android:background="@drawable/colorpicker"
                        android:enabled="false" />
                </RadioGroup>
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </FrameLayout>
</LinearLayout>