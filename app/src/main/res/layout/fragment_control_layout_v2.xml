<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent">

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="0.5" />

        <TextView
            android:elevation="10dp"
            android:layout_weight="1.2"
            android:id="@+id/tv_select_all"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/round_sel"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:text="@string/All"
            android:textAlignment="center"
            android:textColor="@color/backGround"
            android:textSize="18sp"
            android:textStyle="bold" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="0.4" />

        <TextView
            android:elevation="10dp"
            android:id="@+id/tv_select_single"
            android:layout_width="0dp"
            android:layout_weight="1.2"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/round_normal"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:text="@string/Single"
            android:textAlignment="center"
            android:textColor="@color/DeepText"
            android:textSize="18sp"
            android:textStyle="bold" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="0.5" />
    </LinearLayout>

    <FrameLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/all_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/sun"
                android:layout_width="wrap_content"
                android:layout_height="52dp"
                android:layout_marginTop="25dp"
                android:contentDescription="@string/app_name"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/bright_sun" />

            <androidx.cardview.widget.CardView
                android:id="@+id/seek_container"
                android:layout_width="140dp"
                android:layout_height="280dp"
                android:layout_marginTop="30dp"
                android:padding="0dp"
                app:cardCornerRadius="33dp"
                app:cardElevation="8dp"
                app:cardPreventCornerOverlap="false"
                app:contentPadding="0dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/sun">

                <xyz.photonlab.photonlabandroid.views.VerticalSeekBar
                    android:id="@+id/seekBar_brightness"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="0dp"
                    android:background="@drawable/seekbar_drawable_background"
                    android:padding="0dp"
                    android:progressDrawable="@drawable/seekbar_drawable_progress"
                    android:scaleX="1.3"
                    android:scaleY="1.2"
                    android:thumb="@drawable/seekbar_drawable_thumb" />

                <TextView
                    android:id="@+id/progress_tip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/Progress"
                    android:textColor="#FFFFFF"
                    android:textSize="30sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/brightness_tip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:paddingTop="70dp"
                    android:text="@string/Brightness"
                    android:textColor="#FFFFFF" />
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:id="@+id/colors_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:orientation="horizontal"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/seek_container">

                <RadioGroup
                    android:id="@+id/radioGroup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/rButton1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="8dp"
                        android:background="@drawable/checked"
                        android:button="@drawable/oval" />

                    <RadioButton
                        android:id="@+id/rButton2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="8dp"
                        android:background="@drawable/checked_blue"
                        android:button="@drawable/ovalblue" />

                    <RadioButton
                        android:id="@+id/rButton3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="8dp"
                        android:background="@drawable/checked_orange"
                        android:button="@drawable/ovalorange" />

                    <RadioButton
                        android:id="@+id/rButton4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="8dp"
                        android:background="@drawable/checked_purple"
                        android:button="@drawable/ovalpurple" />
                </RadioGroup>

                <Button
                    android:id="@+id/AddColor"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/add_color_24dp" />
            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:id="@+id/powerCard"
                android:layout_width="64dp"
                android:layout_height="64dp"
                app:cardBackgroundColor="#cbbce7"
                app:cardCornerRadius="32dp"
                app:cardElevation="0dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@id/colors_1">

                <ToggleButton
                    android:id="@+id/Power"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:background="@drawable/power_button"
                    android:textOff=""
                    android:textOn="" />
            </androidx.cardview.widget.CardView>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/single_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/content_container"
                android:layout_width="match_parent"
                android:layout_height="440dp"
                android:layout_marginTop="50dp"
                android:gravity="center_vertical"
                android:orientation="vertical"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/noLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/No_Layout"
                    android:textColor="@color/Light_Grey"
                    android:textSize="45sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvGotoSetup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/Go_to_setup"
                    android:textColor="@color/Light_Grey"
                    android:textStyle="bold" />
            </LinearLayout>

            <RadioGroup
                android:id="@+id/radioGroup0"
                android:layout_width="240dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/content_container">

                <RadioButton
                    android:id="@+id/rButton01"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/checked"
                    android:button="@drawable/oval" />

                <RadioButton
                    android:id="@+id/rButton02"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/checked_blue"
                    android:button="@drawable/ovalblue" />

                <RadioButton
                    android:id="@+id/rButton03"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/checked_orange"
                    android:button="@drawable/ovalorange" />

                <RadioButton
                    android:id="@+id/rButton04"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/checked_purple"
                    android:button="@drawable/ovalpurple" />

                <RadioButton
                    android:id="@+id/rButton05"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/checked_purple"
                    android:button="@drawable/ovalpurple" />
            </RadioGroup>

            <RadioGroup
                android:id="@+id/radioGroup00"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="horizontal"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/radioGroup0">

                <RadioButton
                    android:id="@+id/rButton06"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/checked"
                    android:button="@drawable/oval" />

                <RadioButton
                    android:id="@+id/rButton07"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/checked_blue"
                    android:button="@drawable/ovalblue" />

                <RadioButton
                    android:id="@+id/rButton08"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/checked_orange"
                    android:button="@drawable/ovalorange" />

                <RadioButton
                    android:id="@+id/rButton09"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/checked_purple"
                    android:button="@drawable/ovalpurple" />

                <Button
                    android:id="@+id/AddColor00"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/add_color_24dp" />
            </RadioGroup>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </FrameLayout>
</LinearLayout>